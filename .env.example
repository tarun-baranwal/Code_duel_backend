# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/leetcode_tracker"

# JWT Configuration
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Encryption Configuration
# Generate a strong random key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production

# LeetCode API Configuration
LEETCODE_GRAPHQL_URL=https://leetcode.com/graphql

# Cron Configuration
CRON_ENABLED=true
# Cron expression for daily evaluation (default: 1 AM daily)
# Format: minute hour day month weekday
# Examples:
#   0 1 * * * = Every day at 1:00 AM
#   0 0 * * * = Every day at midnight
#   */15 * * * * = Every 15 minutes (for testing)
DAILY_EVALUATION_TIME=0 1 * * *

# CORS Configuration
# Use '*' for development, specify frontend URL for production
CORS_ORIGIN=*

